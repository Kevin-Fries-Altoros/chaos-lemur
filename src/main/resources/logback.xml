<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.pivotal.chaoslemur" level="${LOGGING_LEVEL:-INFO}"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
